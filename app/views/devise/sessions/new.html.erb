<div class='login-form'>
  <h1>Brainstorm</h1>

  <hr class='gradiant-hr'>

  <h2 class='login-title'>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.email_field :email, class: "login-field", autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, class: "login-field",autocomplete: "off", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Log in", class: 'link-button form-submit-button' %>
    </div>
  <% end %>

  <div class='login-links'>
    <%= render "devise/shared/links" %>
  </div>
</div>
