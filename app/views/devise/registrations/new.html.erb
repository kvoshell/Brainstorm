<div class='login-form'>
  <h1>Brainstorm</h1>

  <hr class='gradiant-hr'>

  <h2 class='login-title'>Sign Up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.email_field :email, class: "login-field", autofocus: true, autocomplete: "email", placeholder: "Email" %>
    </div>

    <div class="field">
      <%= f.password_field :password, class: "login-field", autocomplete: "off", placeholder: "Password" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: "login-field", autocomplete: "off", placeholder: "Confirm Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: 'login-button form-submit-button' %>
    </div>
  <% end %>

  <div class='login-links'>
    <%= render "devise/shared/links" %>
  </div>
</div>
