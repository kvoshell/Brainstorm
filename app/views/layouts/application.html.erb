        <h3><%= link_to 'Account/Project Management', account_managements_index_path, class:'sidebar-item' %></h3>
        <h3><%= link_to 'Answered', designs_index_path, class:'sidebar-item' %></h3>
        <h3><%= link_to 'Starred', designs_index_path, class:'sidebar-item' %></h3>
        <h3><%= link_to 'Appointments', designs_index_path, class:'sidebar-item' %></h3>
        <h3><%= link_to 'Guidelines', designs_index_path, class:'sidebar-item' %></h3>
      </div>
    </div>
    <div class='body-info'>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>

      <%= yield %>
    </div>
