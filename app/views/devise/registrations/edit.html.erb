<div class='login-form'>
  <h1>Brainstorm</h1>

  <hr class='gradiant-hr'>

  <h2 class='login-title'>Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :full_name, class: "login-field", autofocus: true, placeholder: "Full Name" %>
    </div>

    <div class="field">
      <%= f.text_field :user_name, class: "login-field", placeholder: "User Name" %>
    </div>

    <div class="field">
      <%= f.text_field :title, class: "login-field", placeholder: "Title" %>
    </div>

    <div class="field">
      <%= f.email_field :email, class: "login-field", autocomplete: "email", placeholder: "Email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.password_field :password, class: "login-field", autocomplete: "off", placeholder: "New Password (optional)" %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, class: "login-field", autocomplete: "off", placeholder: "Confirm Password" %>
    </div>

    <div class="field">
      <%= f.password_field :current_password, class: "login-field", autocomplete: "off", placeholder: "Current Password (required)" %>
    </div>

    <div class="actions">
      <%= f.submit "Update", class: 'link-button form-submit-button' %>
    </div>
    <div class="actions">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'link-button form-submit-button delete' %></p>
    </div>
  <% end %>

  <div class='login-links'>
    <%= link_to "Back", :back, class: 'link-button form-submit-button' %>
  </div>
</div>
